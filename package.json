{
  "name": "@krivega/timeout-requester",
  "version": "1.0.0",
  "bugs": {
    "url": "https://github.com/Krivega/timeout-requester/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Krivega/timeout-requester.git"
  },
  "license": "MIT",
  "author": {
    "name": "Krivega Dmitriy",
    "email": "mr.krivega@gmail.com",
    "url": "https://krivega.com"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./doMock": {
      "types": "./dist/doMock.d.ts",
      "import": "./dist/doMock.js",
      "require": "./dist/doMock.cjs",
      "default": "./dist/doMock.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "lint": "yarn lint:ts && yarn lint:js",
    "lint:danger": "danger ci --failOnErrors",
    "lint:js": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --cache --cache-strategy=content",
    "lint:ts": "tsc",
    "prepare": "husky",
    "prepublishOnly": "yarn build",
    "preview": "vite preview",
    "release": "standard-version && yarn release:publish",
    "release:major": "standard-version --release-as major && yarn release:publish",
    "release:minor": "standard-version --release-as minor && yarn release:publish",
    "release:pre": "standard-version --prerelease && yarn release:publish",
    "release:publish": "git push --follow-tags origin main && npm publish --access public",
    "test": "jest",
    "test:ci": "cross-env CI=true jest --passWithNoTests",
    "test:coverage": "yarn test:ci --coverage --reporters=default --reporters=jest-junit",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@krivega/cancelable-promise": "^1.1.4"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.28.5",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/compat": "^2.0.0",
    "@krivega/eslint-config": "^1.0.11",
    "@types/jest": "^30.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "danger": "^13.0.5",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-extended": "^7.0.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsc-files": "^1.1.4",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "peerDependencies": {
    "@krivega/cancelable-promise": "^1.1.4"
  }
}
